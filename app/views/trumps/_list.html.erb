<%= link_to "カードを引く", trumps_path, class: "btn btn-outline-dark", method: :post, remote: true %>
<% cards.each do |card| %>
    <% if card.suit == 4 %>
        JOKER
    <% else %>
        <%= Suit.find(card.suit).name + card.number.to_s %>
    <% end %>
<% end %>
<br>
